@addTagHelper *, Kentico.Content.Web.Mvc
@model Shared.Models.PageViewModel

@{
    ViewBag.ChannelName = Model.ChannelContextName;
}

@section styles
{
    @* Includes CSS necessary for page builder functionality *@
    <page-builder-styles />
}

@section scripts
{
    @* Includes scripts necessary for page builder functionality *@
    <page-builder-scripts />
}

@await Component.InvokeAsync("Navigation", new { channelName = Model.ChannelContextName })
<main>
    <editable-area area-identifier="areaSimple" />
</main>
